<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jason.book.mapper.UserMapper">
    <resultMap id="UserResultMap" type="com.alibaba.fastjson.JSONObject">
        <id column="user_id" jdbcType="INTEGER" property="userId" />
        <result column="user_name" jdbcType="VARCHAR" property="userName" />
        <result column="user_password" jdbcType="VARCHAR" property="password" />
        <result column="user_email" jdbcType="VARCHAR" property="email" />
        <result column="user_status" jdbcType="INTEGER" property="status" />
        <result column="create_date" jdbcType="DATE" property="createDate" />
        <result column="role_id" jdbcType="INTEGER" property="roleId" />
    </resultMap>

    <!--根据用户名查询用户-->
    <select id="selectByName" resultMap="UserResultMap" resultType="com.alibaba.fastjson.JSONObject">
        select user_id,user_name,user_password,role_id,user_status,user_email
        from t_user
        <where>
            <if test="userName != null and userName!= ''">
                and user_name = #{userName,jdbcType=VARCHAR}
            </if>
        </where>
    </select>

</mapper>
